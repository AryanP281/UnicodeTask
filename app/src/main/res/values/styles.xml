   <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
       <item name="windowNoTitle">true</item>
       <item name="windowActionBar">false</item>
       <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
       <item name="colorPrimaryDark">@color/darkThemeColorPrimary</item>
       <item name="colorAccent">@color/darkThemeColorAccent</item>
       <item name="android:windowBackground">@color/darkThemeWindowBackground</item>
       <item name="android:textColorPrimary">@color/darkThemeTextColor</item>
       <item name="android:textColor">@color/darkThemeTextColor</item>
       <item name="toolbarGradientStart">@color/darkThemeToolbarGradientStart</item>
       <item name="toolbarGradientEnd">@color/darkThemeToolbarGradientEnd</item>
       <item name="toolbarGradientCentre">@color/darkThemeToolbarGradientCentre</item>
       <item name="navdrawerGradientStart">@color/darkThemeNavGradientStart</item>
